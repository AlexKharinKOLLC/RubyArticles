<% provide(:title, "Edit user info") %>

<div class="container-fluid well span6" style="width:80%;">
	<div class="row-fluid">
        <div class="span8">
			<%= form_with(model: @user, url: profile_edit_path, local: true) do |f| %>
			  <%= f.label :name %>
			  <%= f.text_field :name %><br><br>

			  <%= f.label :email %>
			  <%= f.email_field :email %><br><br>

			  <%= f.label :first_name %>
			  <%= f.text_field :first_name %><br><br>

			  <%= f.label :last_name %>
			  <%= f.text_field :last_name %><br><br>

			  <%= f.label :birthday %>
			  <%= f.date_field :birthday %><br><br>

			  <%= f.label :country %>
			  <%= f.text_field :country %><br><br>

			  <%= f.label :about %>
			  <%= f.text_area :about %><br><br>

			  <%= f.submit "Update", class: "btn btn-primary" %>
			<% end %>
		</div>
	</div>
</div>