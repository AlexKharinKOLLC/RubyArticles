<!DOCTYPE html>
<html>
  <head>
    <title> <%= yield(:title) %> </title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    "application", media: "all" %>
  	<%= stylesheet_link_tag    "https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" %>
    <%= javascript_include_tag "https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js" %>
    <%= javascript_include_tag "https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" %>
    <%= javascript_include_tag "rails" %>
  </head>

  <body>
  	<nav class="navbar navbar-inverse">
  		<div class="container-fluid">
    		<div class="navbar-header">
      			<a class="navbar-brand">Profile</a>
    		</div>
    		<ul class="nav navbar-nav">
      			<li <% if params[:controller]=="home" &&  params[:action]=="index" %>class="active"<% end %>>
      				<%= link_to "Home", {controller: 'home', action: 'index'} %>
      			</li>
      			<li <% if params[:controller]=="news" %>class="active"<% end %>>
					<%= link_to "News", {controller: 'news', action: 'index'} %>
      			</li>
      			<li <% if params[:controller]=="home" &&  params[:action]=="about"%>class="active"<% end %>>
      				<%= link_to "About", {controller: 'home', action: 'about'} %>
      			</li>
    		</ul>
    		<div class="nav navbar-nav navbar-right">
      			<%= link_to "Users", {controller: 'users', action: 'index'}, {class: 'btn btn-primary navbar-btn'} %>
      		</div>
  		</div>
	  </nav>
      <% flash.each do |key, value| %>
        <div class="alert alert-<%= key %>"><%= value %></div>
      <% end %>
      <%= yield %>
    </body>
</html>
