<% provide(:title, "Creating new article") %>

<div class="container">
  <div class="jumbotron">
	<%= form_for(@article) do |f| %>
	  <%= f.label :title %>
	  <%= f.text_field :title %><br><br>

	  <%= f.label :content %>
	  <%= f.text_area :content %><br><br>

	  <%= f.submit "Create", class: "btn btn-primary" %>
	<% end %>
  </div>
</div>