<% provide(:title, "Creating new article") %>

<%= form_for(@article) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %><br><br>

  <%= f.label :content %>
  <%= f.text_area :content %><br><br>

  <%= f.label :user_id %>
  <%= f.select :user_id, User.pluck(:id) %><br><br>

  <%= f.submit "Create", class: "btn btn-primary" %>
<% end %>