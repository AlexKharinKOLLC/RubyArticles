<% provide(:title, "Edit article") %>

<div class="container">
  <div class="jumbotron">
	<%= form_with(model: @article, local: true) do |f| %>
	  <%= f.label :title %>
	  <%= f.text_field :title %><br><br>

	  <%= f.label :content %>
	  <%= f.text_area :content %><br><br>

	  <%= f.label :user_id %>
	  <%= f.select :user_id, User.pluck(:id) %><br><br>

	  <%= f.submit "Update", class: "btn btn-primary" %>
	<% end %>    
  </div>
</div>
